{{#reveal-slide class="lsgdd-FreestyleSlide lsgdd-ObjectivesSlide"}}
  {{presentations/slide-header
    super="Prerequisites"
    main="Design System"
    sub=""
  }}
  {{#presentations/slide-body columns=2}}
    {{#presentations/slide-column class="u-flex60"}}
      {{#presentations/slide-list}}
        {{#presentations/slide-list-item class="SlideListItem--withSubItems"}}
          Shipping a design system let us
        {{/presentations/slide-list-item}}
        {{#presentations/slide-list-item type="sub"}}
          <ul>
            <li>Establish common foundational principles</li>
            <li>Assemble consistent UIs across apps</li>
            <li>Iterate sustainably and creatively</li>
            <li>Provide components with no side effects</li>
          </ul>
        {{/presentations/slide-list-item}}
      {{/presentations/slide-list}}
    {{/presentations/slide-column}}
    {{#presentations/slide-column class="u-flex40"}}
      <div class="lsgdd-TightContainer">
        <img class="lsgdd-Image" src="assets/images/design-systems.png" alt="Design Systems">
      </div>
    {{/presentations/slide-column}}
  {{/presentations/slide-body}}
  {{#presentations/slide-footer}}
    <p>
      <small>
        <a href="https://www.invisionapp.com/blog/guide-to-design-systems/">A comprehensive guide to design systems</a>
      </small>
    </p>
  {{/presentations/slide-footer}}
  {{#reveal-slide-notes}}
  {{/reveal-slide-notes}}
{{/reveal-slide}}
