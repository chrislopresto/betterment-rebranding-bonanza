{{#reveal-slide class="lsgdd-FreestyleSlide lsgdd-ObjectivesSlide"}}
  {{presentations/slide-header
    super="Design System"
    main="Breakpoint System"
    sub=""
  }}
  {{#presentations/slide-body columns=2}}
    {{#presentations/slide-column}}
      {{#presentations/slide-list}}
        {{#presentations/slide-list-item class="SlideListItem--withSubItems"}}
          Two main breakpoints
        {{/presentations/slide-list-item}}
        {{#presentations/slide-list-item type="sub"}}
          <ul>
            <li><code>md: 700px</code></li>
            <li><code>lg: 964px</code></li>
          </ul>
        {{/presentations/slide-list-item}}
        {{#presentations/slide-list-item}}
          Responsive utility classes
        {{/presentations/slide-list-item}}
      {{/presentations/slide-list}}
    {{/presentations/slide-column}}
    {{#presentations/slide-column}}
      <div class="u-smallHeader">SCSS mixins</div>
      {{#reveal-code language="scss" codeTheme="tomorrow-night"}}
  .element {
    // padding of size m by default
    padding: sc-spacing('m');

    @include sc-media('md') {
      // size l above md breakpoint
      padding: sc-spacing('l');
    }
  }
      {{/reveal-code}}

      <br />
      <div class="u-smallHeader">Responsive utility classes</div>
      {{#reveal-code language="html" codeTheme="tomorrow-night"}}
  &lt;div class="u-p--m u-p--l@md"&gt;
    &lt;!-- padding of size m by default, size l above md breakpoint --&gt;
  &lt;/div&gt;
      {{/reveal-code}}
    {{/presentations/slide-column}}
  {{/presentations/slide-body}}
  {{#presentations/slide-footer}}
  {{/presentations/slide-footer}}
  {{#reveal-slide-notes}}
  {{/reveal-slide-notes}}
{{/reveal-slide}}
