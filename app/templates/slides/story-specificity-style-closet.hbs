{{#reveal-slide class="lsgdd-FreestyleSlide lsgdd-ObjectivesSlide"}}
  {{presentations/slide-header
    super="Stats and stories"
    main="CSS Specificity"
    sub="Design System"
  }}
  {{#presentations/slide-body columns=2}}
    {{#presentations/slide-column}}
      <div class="u-smallHeader">Style Closet 1.x</div>
      <div class="lsgdd-TightContainer">
        <img class="lsgdd-Image lsgdd-image--boxShadow lsgdd-image--maxHeight630" src="assets/images/specificity-graph-style-closet-1x.png" alt="CSS specificity">
      </div>
      <p><small>Average specificity: <strong>17.2</strong></small></p>
    {{/presentations/slide-column}}
    {{#presentations/slide-column}}
      <div class="u-smallHeader">Style Closet 2.x</div>
      <div class="lsgdd-TightContainer">
        <img class="lsgdd-Image lsgdd-image--boxShadow lsgdd-image--maxHeight630" src="assets/images/specificity-graph-style-closet-rebrand-clean.png" alt="CSS specificity">
      </div>
      <p><small>Average specificity: <strong>12.0</strong></small></p>
    {{/presentations/slide-column}}
  {{/presentations/slide-body}}
  {{#presentations/slide-footer}}
    <p>
      <small>
        <a href="https://jonassebastianohlsson.com/specificity-graph/">Specificity graph</a>
      </small>
    </p>
  {{/presentations/slide-footer}}
  {{#reveal-slide-notes}}
  {{/reveal-slide-notes}}
{{/reveal-slide}}
