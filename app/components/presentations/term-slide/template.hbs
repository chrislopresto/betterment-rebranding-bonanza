<div class="stretch RevealSlide-content {{if centeredVertically 'RevealSlide-content--centeredVertically'}}">
  {{#presentations/slide-body display="block"}}
    <div class="TermSlide-term">{{term}}</div>
    {{#if qualifier}}
      <div class="TermSlide-qualifier">{{qualifier}}</div>
    {{/if}}
    {{#if hasBlock}}
      <div class="TermSlide-definition">
        {{yield}}
      </div>
    {{else}}
      <div class="TermSlide-definition">{{definition}}</div>
    {{/if}}
  {{/presentations/slide-body}}
</div>
