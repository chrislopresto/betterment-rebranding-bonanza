<div class="stretch RevealSlide-content {{if centeredVertically 'RevealSlide-content--centeredVertically'}}">
  {{#presentations/slide-body align="center" display="block"}}
    {{#if hasBlock}}
      <h2 class="QuoteSlide-quote">{{yield}}</h2>
    {{else}}
      <h2 class="QuoteSlide-quote">{{quote}}</h2>
    {{/if}}
    <div class="QuoteSlide-attribution">{{attribution}}</div>
  {{/presentations/slide-body}}
</div>
